# Avernus Combat Tracker Environment Variables
# Copy this file to .env.local and fill in your Firebase config

# Set to 'true' to enable Firebase authentication and cloud storage
# Set to 'false' for local-only mode (localStorage)
VITE_AUTH_ENABLED=false

# Feature Flags
# Set to 'true' to enable elevation zones feature (experimental)
VITE_FEATURE_ELEVATION_ZONES=false

# Firebase Configuration (required when VITE_AUTH_ENABLED=true)
# Get these values from Firebase Console > Project Settings > Your apps
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
